# Application Settings
APP_NAME=logging_service
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=DEBUG

# Server Settings
HOST=0.0.0.0
PORT=8000

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Database Settings
DB_HOST=postgres
DB_PORT=5432
DB_NAME=logging_db
DB_USER=logger
DB_PASSWORD=development_password
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=True

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Settings
SECRET_KEY=dev_secret_key_change_me_in_production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Feature Flags
ENABLE_BATCH_PROCESSING=False
ENABLE_ASYNC_LOGGING=True

# Performance Tuning
WORKER_PROCESSES=1
THREAD_POOL_SIZE=4
MAX_QUEUE_SIZE=1000 